{
	"variables": {
		"dockerhub_username": "",
		"dockerhub_password":"",
		"dockerhub_repository":""
	},

    "builders": [
        {  "type": "docker",  
            "image": "ubuntu:20.04",  
            "commit": true,  
            "changes": [       
                "EXPOSE 8083",      
                "ENTRYPOINT [\"java\", \"-jar\", \"calculator.jar\"]" ]}
    ],

      "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt update", "apt install ansible -y"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "/var/lib/jenkins/workspace/job2/job2/playbook.yml"
    },
    {
      "type": "file",
      "source": "/var/lib/jenkins/workspace/job2/job1/build/libs/calculator.jar",
      "destination": "/calculator.jar"
    }
  ],
    "post-processors":[
		[
			{
				"type": "docker-tag",
				"repository": "{{user `dockerhub_repository`}}",
				"tag": "calculator-app"
			},
			{
				"type": "docker-push",
				"login":true,
				"login_username":"{{user `dockerhub_username`}}",
				"login_password":"{{user `dockerhub_password`}}"
			}
		]
	]

}
