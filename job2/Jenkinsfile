pipeline {
    agent any
	

    stages {
        stage ('Get Artifact from JFrog') {
            steps {
                rtDownload (
		    serverId: 'Artifactory',
		    spec: '''{
			  "files": [
			    {
			      "pattern": "calculator-app/calculator.jar",
			       "target": "job1/build/libs/calculator.jar"
			    }
			  ]
		    }'''
		)
            }
        }
	    
        stage('Get permission') {
            steps {
                sh "chmod +x -R ${env.WORKSPACE}"
            }
        }
        stage ('Build Image and Deploy in DockerHub') {
            steps {
 sh 'packer build  -var "dockerhub_repository_name=carlosvanoni/tema-final1" -var "dockerhub_username=carlosvanoni" -var "dockerhub_user_password=dockerhub" "job2/packer.json"'
            }
        }
    }
}
